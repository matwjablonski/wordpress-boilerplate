{
  "name": "wordpress-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "yarn build --watch",
    "build": "./node_modules/.bin/webpack",
    "generate:pot": "wp-pot --domain 'leo' --src 'src/*.php' --dest-file 'src/translations.pot'",
    "watch:pot": "npm run generate:pot && onchange \"src/**/*.php\" -- npm run generate:pot",
    "watch:files": "onchange \"public/**/*\" -- yarn docker:cp",
    "docker:cp": "docker cp public/wp-content wordpress:/var/www/html/",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down --volumes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matwjablonski/wordpress-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matwjablonski/wordpress-boilerplate/issues"
  },
  "homepage": "https://github.com/matwjablonski/wordpress-boilerplate#readme",
  "devDependencies": {
    "copy-webpack-plugin": "^4.5.3",
    "create-file-webpack": "^1.0.0",
    "file-loader": "^2.0.0",
    "npm-run-all": "^4.1.3",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "onchange": "^5.2.0"
  }
}
